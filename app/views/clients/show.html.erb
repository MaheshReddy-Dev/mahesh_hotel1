<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @client %>

    <%= link_to 'Edit this client', edit_client_path(@client),data: { turbo_frame: "remote_modal" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this client', client_path(@client),  data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'}, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to login page', root_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
