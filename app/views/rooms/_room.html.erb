<div id="<%= dom_id room %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Hotel:</strong>
    <%= room.hotel.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Room type:</strong>
    <%= room.room_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Capacity:</strong>
    <%= room.number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= room.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this room", room, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this room', edit_room_path(room), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
