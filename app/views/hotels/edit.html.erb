<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing hotel</h1>
  <%= form_with(model: @hotel, class: "contents") do |form| %>
    <%= render 'shared/errors', obj: @hotel %>

    <div class="my-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
    <%= link_to "Back to login page", root_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
